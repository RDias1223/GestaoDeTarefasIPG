@model ProfessorViewModels


@{
    ViewData["Title"] = "Index";
}

<h1>Professor</h1>

<form class="form-inline my-2 my-lg-0 pl-3-lg">

    <input class="form-control" type="search" placeholder="Pesquisar" aria-label="Search" asp-for="Nome">
    <button class="btn btn-dark ml-1" type="submit">
        <img src="~/imagem/icon.png" width="25" height="25" class="d-inline-block align-top" alt="">
    </button>


</form>


<p>
    <a class="btn btn-outline-primary" asp-action="Create">Criar Novo</a>
</p>
<table class="table table-hover table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Professores.First().Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Professores.First().Contato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Professores.First().Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Professores.First().Morada)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Professores)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contato)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Morada)
                </td>

                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.ProfessorId">Editar</a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.ProfessorId">Detalhes</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ProfessorId">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div modelo-pagina="@Model.Paginacao"></div>

