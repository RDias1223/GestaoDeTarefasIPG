<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - Gestão de Tarefas do IPG</title>


    <link href="https://fonts.googleapis.com/css?family=Muli:300,400,700,900" rel="stylesheet">
    <link rel="stylesheet" href="fonts/icomoon/style.css">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body data-spy="scroll" data-target=".site-navbar-target" data-offset="300">
    
    <header class="site-navbar py-4 js-sticky-header site-navbar-target" role="banner">

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">


                <nav class="navbar navbar-light bg-light">
                    <a class="navbar-brand" href="#">
                        <img src="~/imagem/transferir.png" width="30" height="30" class="d-inline-block align-top" alt="">
                        IPG
                    </a>
                </nav>


                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="nav justify-content-center">
                        <li class="nav-item">
                            <a class="btn btn-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-light" asp-area="" asp-controller="Professors" asp-action="Index">Professores</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-light" asp-area="" asp-controller="Funcionarios" asp-action="Index">Funcionários</a>
                        </li>
                    </ul>
                </div>


            </div>

        </nav>

        


    </header>
    <div class="site-section">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()

            </main>
        </div>
    </div>
    <div class="footer">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="copyright">
                        <p>
                            Copyright &copy; 2019 - Gestão de Tarefas do IPG
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>