@model IEnumerable<GestaoDeTarefasIPG.Models.Tarefa>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prioridade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prioridade)
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.TarefaId">Edit</a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.TarefaId">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.TarefaId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
